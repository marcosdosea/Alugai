@model IEnumerable<AlugaiWEB.Models.ImovelModel>

@{
    ViewData["Title"] = "Imóvel";
    Layout = "_MeusDados";
}

<p>
    <a class="btn btn-success" asp-action="Create">Cadastrar</a>
</p>

<body>

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CodigoImovel)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TipoImovel)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.Descricao)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ValorDoAluguel)
                </th>

                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CodigoImovel)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TipoImovel)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descricao)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ValorDoAluguel)
                    </td>

                    <td style="width: 5%; text-align:center;">
                        <div class="dropdown">
                            <button style="width: 40px" class="btn btn-light" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-ellipsis-v"></i>
                            </button>
                            <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                                <li>@Html.ActionLink("Editar", "Edit", new { id = item.CodigoImovel }, new { @class = "dropdown-item"})</li>                        
                                <li>@Html.ActionLink("Detalhes", "Details", new { id = item.CodigoImovel }, new { @class = "dropdown-item"})</li>
                                <li>@Html.ActionLink("Deletar", "Delete", new { id = item.CodigoImovel }, new { @class = "dropdown-item"})</li>
                            </ul>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>