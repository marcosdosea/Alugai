<!-- Início header -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js" integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0" crossorigin="anonymous"></script>

<div class="filters-header">
    <div class="bg"></div>
    <div class="gradient"></div>
    <div class="inner">
        <div class="container">
            <div class="row">
                <div class="d-flex justify-content-center mt-5">
                    <div class="filters-content">
                        <h1 class="display-3 text-uppercase">Encontre as melhores casas</h1>
                        <h1 class="display-3 text-uppercase">Pelos melhores preços</h1>
                        <button type="button" class="btn btn-primary dropdown-toggle mt-3" data-bs-toggle="modal" data-bs-target="#modalBuscarImovel">
                            Opções de Busca
                        </button>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>


<!-- Button trigger modal -->
<!-- Modal -->
<div class="modal fade" id="modalBuscarImovel" tabindex="-1" aria-labelledby="modalBuscaImovelLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalBuscaImovelLabel">Buscar Imóvel</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">

                <form>
                    <div class="row">

                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="tipoImovel">Tipo do Imóvel</label>
                                <select class="form-select" id="tipoImovel">
                                    <option>CASA</option>
                                    <option>APARTAMENTO</option>
                                    <option>SALÃO DE FESTAS</option>
                                </select>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="formGroupExampleInput">Localização do Imóvel</label>
                                <input type="text" class="form-control" id="formGroupExampleInput" placeholder="Rua, Bairro, Cidade, CEP">
                            </div>
                        </div>

                    </div>

                    <div class="row">

                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="faixaPreco">Faixa de Preço</label>
                                <select class="form-select" id="faixaPreco">
                                    <option>R$300,00</option>
                                    <option>R$400,00</option>
                                    <option>R$500,00</option>
                                </select>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="qtdQuartos">Quartos</label>
                                <select class="form-select" id="qtdQuartos">
                                    <option>1</option>
                                    <option>2</option>
                                    <option>3+</option>
                                </select>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="qtdBanheiros">Banheiros</label>
                                <select class="form-select" id="qtdBanheiros">
                                    <option>1</option>
                                    <option>2</option>
                                    <option>3+</option>
                                </select>
                            </div>
                        </div>

                    </div>

                </form>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Sair</button>
                <button type="button" class="btn btn-primary">Buscar</button>
            </div>
        </div>
    </div>
</div>

<!-- Fim header -->
