@model AlugaiWEB.Models.StatuspagamentoModel

@{
    ViewData["Title"] = "Create";
    Layout = "_MeusDados";
}

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CodigoStatusPagamento" class="control-label"></label>
                <input asp-for="CodigoStatusPagamento" class="form-control" />
                <span asp-validation-for="CodigoStatusPagamento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="row mt-3">
                <div class="col-md-6">
                    <div class="form-group">
                        <input type="submit" value="Cadastrar" class="btn btn-primary" />
                        <a class="btn btn-light ml-2" asp-action="Index">Voltar</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
