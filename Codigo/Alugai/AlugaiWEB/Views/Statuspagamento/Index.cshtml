                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-9 col-sm-8 ml-auto" id="main">

                    <!-- Tab panes -->
                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.CodigoStatusPagamento)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Descricao)
                                </th>
                                <th></th>
                            </tr>
