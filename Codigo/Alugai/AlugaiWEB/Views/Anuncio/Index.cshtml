@model IEnumerable<AlugaiWEB.Models.AnuncioModel>

@{
    ViewData["Title"] = "Index";
    Layout = "_MeusDados";
}

<p>
    <a class="btn btn-success" asp-action="Create">Cadastrar</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CodigoAnuncio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoDeAnuncio)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CodigoAnuncio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoDeAnuncio)
            </td>

            <td>
                @Html.ActionLink("", "Edit", new { id = item.CodigoAnuncio }, new { @class = "far fa-edit text-warning" })
                @Html.ActionLink("", "Details", new { id = item.CodigoAnuncio }, new { @class = "fas fa-info-circle text-primary" })
                @Html.ActionLink("", "Delete", new { id = item.CodigoAnuncio }, new { @class = "fas fa-trash text-danger" })
            </td>
        </tr>
}
    </tbody>
</table>
