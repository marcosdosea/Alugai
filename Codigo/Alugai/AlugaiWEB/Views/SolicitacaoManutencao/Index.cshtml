@model IEnumerable<AlugaiWEB.Models.SolicitacaoManuntecaoModel>

@{
    ViewData["Title"] = "Index";
    Layout = "_MeusDados";
}

<p>
    <a class="btn btn-success" asp-action="Create">Cadastrar</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CodigoManuntencao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoDeManuntencao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Valor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ComodoImovel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CodigoPessoa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CodigoImovel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StatusManutencao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CodigoManuntencao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoDeManuntencao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Valor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ComodoImovel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CodigoPessoa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CodigoImovel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StatusManutencao)
            </td>
            <td>
                @Html.ActionLink("", "Edit", new { id = item.CodigoManuntencao }, new { @class = "far fa-edit text-warning" })
                @Html.ActionLink("", "Details", new { id = item.CodigoManuntencao }, new { @class = "fas fa-info-circle text-primary" })
                @Html.ActionLink("", "Delete", new { id = item.CodigoManuntencao }, new { @class = "fas fa-trash text-danger" })
            </td>
        </tr>
}
    </tbody>
</table>
