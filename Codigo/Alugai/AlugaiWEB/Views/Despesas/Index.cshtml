@model IEnumerable<AlugaiWEB.Models.DespesasModel>

@{
    ViewData["Title"] = "Index";
    Layout = "_MeusDados";
}

<p>
    <a class="btn btn-success" asp-action="Create">Cadastrar</a>
</p>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CodigoDespesas)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DescricaoDespesa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoDeDespesa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Valor)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CodigoDespesas)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DescricaoDespesa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoDeDespesa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Valor)
            </td>
            <td>
                @Html.ActionLink("", "Edit", new { id = item.CodigoDespesas }, new { @class = "far fa-edit text-warning" })
                @Html.ActionLink("", "Details", new { id = item.CodigoDespesas }, new { @class = "fas fa-info-circle text-primary" })
                @Html.ActionLink("", "Delete", new { id = item.CodigoDespesas }, new { @class = "fas fa-trash text-danger" })
            </td>
        </tr>
}
    </tbody>
</table>
